<h1>Editing Approved #<%= @approved.id %></h1>

<%= form_tag(approved_url(@approved), method: 'patch') do %>
  <div>
    <%= label_tag :zipcode %><br />
    <%= number_field_tag :zipcode, @approved.zipcode %>
  </div>

  <div>
    <%= label_tag :status %><br />
    <%= check_box_tag :status, 1, @approved.status? %>
  </div>

  <div>
    <%= submit_tag "Update Approved" %>
  </div>
<% end %>
